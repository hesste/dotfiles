# -*- mode: conf -*-

[include]
	path = ~/.gitspecific
[color]
        branch = auto
        diff = auto
        interactive = auto
        status = auto
[pager]
	status = true
[core]
        editor = emacsclient -t
	excludesfile = ~/.gitignore
[alias]
	st = status
    	ci = commit
	l = log
	co = checkout
	b = branch
        prev = checkout HEAD^
	wdiff = diff --color-words
	logtree = log --graph --oneline --decorate --all

[tig "bind"]
        generic = <Ctrl-r> move-up
        generic = <Ctrl-s> move-down
        generic = <Ctrl-t> scroll-left
        generic = <Ctrl-n> scroll-right
